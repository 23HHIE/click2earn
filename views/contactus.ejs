<%- include partials/header.ejs %>

   <!DOCTYPE html>
   <html>

   <head>
      <title>OSM and Leaflet</title>
      <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
   </head>

   <body style="margin: 0; padding: 0;margin-top: 60px;">
      <div class="container">
         <div class="row mt-3">
            <div class="col">
               <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); transition: 0.3s; border-radius: 5px;">
                  <div class="card-body" style="background: linear-gradient(to right, #2c3e50, #4ca1af);">
                     <h5 class="card-title" style="color: white;">Contact Us</h5>
                     <p class="card-text" style="color: white;">Email: hh@c2e.com</p>
                     <p class="card-text" style="color: white;">Address: 221B Baker Street, London, England</p>
                     <p class="card-text" style="color: white;">Phone: +12349527</p>
                  </div>
               </div>
            </div>
         </div>

         <div class="row mt-5 px-0">
            <div class="col">
               <div id="map" style="width: 100%; height: 100vh"></div>
            </div>
         </div>

      </div>

      <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
      <script>
         // Creating map options
         var mapOptions = {
            center: [51.523767, -0.158115],
            zoom: 15
         }

         // Creating a map object
         var map = new L.map('map', mapOptions);

         // Creating a Layer object
         var layer = new L.TileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png');

         // Adding layer to the map
         map.addLayer(layer);
      </script>
   </body>

   </html>